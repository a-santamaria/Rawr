<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.david.rawr" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".mainActivities.Loading_window"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mainActivities.LogIn"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".mainActivities.OwnerProfile"
            android:configChanges="orientation"
            android:label="@string/title_activity_perfil_persona"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".mainActivities.downloading_window"
            android:configChanges="orientation"
            android:label="@string/title_activity_downloading_window"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".mainActivities.Newsfeed"
            android:configChanges="orientation"
            android:label="@string/title_activity_Newsfeed"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".mainActivities.PetProfile"
            android:configChanges="orientation"
            android:label="@string/title_activity_petProfile"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SignUp_wndow"
            android:label="@string/title_activity_sign_up_wndow" >
        </activity>
    </application>

    <!--  Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
