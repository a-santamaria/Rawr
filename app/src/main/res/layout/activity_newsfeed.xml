<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.david.rawr.mainActivities.Newsfeed"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="@dimen/width_actual_pet_label"
            android:layout_height="@dimen/size_actual_pet_img"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="@dimen/size_actual_pet_img"
                android:layout_height="@dimen/size_actual_pet_img"
                android:id="@+id/profileButton"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Paco"/>
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:layout_gravity="center"
            android:baselineAlignBottom="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="@dimen/size_newsfeed_icons"
            android:layout_height="@dimen/size_newsfeed_icons"
            android:id="@+id/socialButton"
            android:background="@drawable/post_icon"
            android:layout_marginRight="@dimen/margin_principal_icons"
            />

        <ImageView
            android:layout_width="@dimen/size_newsfeed_icons"
            android:layout_height="@dimen/size_newsfeed_icons"
            android:id="@+id/cupidButton"
            android:background="@drawable/petlove_icon"
            android:layout_marginRight="@dimen/margin_principal_icons"/>

        <ImageView
            android:layout_width="@dimen/size_newsfeed_icons"
            android:layout_height="@dimen/size_newsfeed_icons"
            android:id="@+id/petLostButton"
            android:background="@drawable/petlost_icon"
            android:layout_marginRight="@dimen/margin_principal_icons"/>

        <ImageView
            android:layout_width="@dimen/size_newsfeed_icons"
            android:layout_height="@dimen/size_newsfeed_icons"
            android:id="@+id/classifiedButton"
            android:background="@drawable/classified_icon"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/principal_listView" />

</LinearLayout>
