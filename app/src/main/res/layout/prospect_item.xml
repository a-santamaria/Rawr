<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="@dimen/width_prospect_img_layout"
        android:layout_height="@dimen/width_prospect_item"
        android:layout_gravity="center_horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/size_img_prospects"
            android:layout_height="@dimen/size_img_prospects"
            android:id="@+id/prospect_picture"
            android:scaleType="fitXY"
            android:layout_gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/width_prospect_item">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/width_label_prospects"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:id="@+id/prospect_name"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Age"
                android:id="@+id/prospect_age"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Greed"
                android:id="@+id/prospect_greed"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/size_img_likeU"
            android:layout_height="@dimen/size_img_likeU"
            android:id="@+id/cupid"
            android:layout_gravity="center"
            />
    </LinearLayout>
</LinearLayout>